<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.start.sports">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:textSize="50sp"
                android:textStyle="normal|bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1.The opening fixture of the 2009 Confederations Cup football tournament was held in which South African city?"
                android:textStyle="bold"
                android:textColor="#FF9A00"
                />


            <RadioGroup
                android:id="@+id/radioGroupr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio1r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="ReligionQ1"
                    android:text="Bloemfontein" />

                <RadioButton
                    android:id="@+id/radio2r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="ReligionQ1"
                    android:text="Johannesburg" />

                <RadioButton
                    android:id="@+id/radio3r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Pretoria" />

                <RadioButton
                    android:id="@+id/radio4r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Rustenburg" />
            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2.Tony Mowbray left West Bromwich Albion in June 2009 to manage which Scottish football club?"
                android:textStyle="bold"
                android:textColor="#FF9A00"
                />


            <RadioGroup
                android:id="@+id/radioGroup1r"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio5r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Aberdeen" />

                <RadioButton
                    android:id="@+id/radio6r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="ReligionQ2"
                    android:text="Celtic" />

                <RadioButton
                    android:id="@+id/radio7r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="ReligionQ2"
                    android:text="Hearts" />

                <RadioButton
                    android:id="@+id/radio8r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Rangers" />
            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="3.Madrid lost out to Rio de Janeiro on Friday in the bidding to host the 2016 Olympics. Which other European city was one of the seven original applicants??"
                android:textStyle="bold"
                android:textColor="#FF9A00"
                />


            <RadioGroup
                android:id="@+id/radioGroup3r"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio9r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Berlin" />

                <RadioButton
                    android:id="@+id/radio10r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Oslo" />

                <RadioButton
                    android:id="@+id/radio11r"
                    android:layout_width="fill_parent"
                    android:onClick="ReligionQ3"
                    android:layout_height="wrap_content"
                    android:text="Prague" />

                <RadioButton
                    android:id="@+id/radio12r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Vienna" />
            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="4.German football club Wolfsburg, who lost at Old Trafford last week, are sponsored by which car manufacturer?"
                android:textStyle="bold"
                android:textColor="#FF9A00"
                />


            <RadioGroup
                android:id="@+id/radioGroup4r"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio13r"
                    android:layout_width="fill_parent"
                    android:onClick="ReligionQ4"
                    android:layout_height="wrap_content"
                    android:text="Audi" />

                <RadioButton
                    android:id="@+id/radio14r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="BMW" />

                <RadioButton
                    android:id="@+id/radio15r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Porsche" />

                <RadioButton
                    android:id="@+id/radio16r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="ReligionQ4"
                    android:text="Volkswagen" />
            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="5.The first Six Nations Championship was held in 2000. Who were the winners"
                android:textStyle="bold"
                android:textColor="#FF9A00"
                />


            <RadioGroup
                android:id="@+id/radioGroup5r"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio17r"
                    android:layout_width="fill_parent"
                    android:onClick="ReligionQ5"
                    android:layout_height="wrap_content"
                    android:text="England" />

                <RadioButton
                    android:id="@+id/radio18r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="France" />

                <RadioButton
                    android:id="@+id/radio19r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Scotland" />

                <RadioButton
                    android:id="@+id/radio20r"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Wales" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="#FF9A00"
                android:gravity="center"
android:textColor="#FFFFFF"
                android:onClick="submitButtonr"
                android:text="Score" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>


